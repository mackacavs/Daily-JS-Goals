<form method="post" action="/goals/{{goal._id}}?_method=PUT">
  <input type="hidden" name="_method" value="PUT">
  <div class="row">
    <div class="form-group col-md-6 offset-md-3">
      <label for="objective">Objective</label>
      <input type="text" class="form-control" id="objective" name="objective" value="{{goal.objective}}">
    </div>
    <div class="
        form-group col-md-6 offset-md-3">
      <label for="description">Description</label>
      <textarea id="description" name="description" name="description" class="form-control" rows="5" cols="52">{{goal.description}}</textarea>
    </div>

    <div class="form-group col-md-6 offset-md-3">
      <label for="how">How?</label>
      <input type="text" class="form-control" id="how" name="how" value="{{goal.howToComplete}}">
    </div>

    <button type="submit" style="width: 100px" class="btn btn-sm btn-primary col-md-6 offset-md-3">Submit</button>

  </div>
</form>